<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgymazul"

    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnIniciarSessao"
        android:layout_width="140dp"
        android:layout_height="46dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/degradebutton"
        android:fontFamily="@font/comfortaa"
        android:text="Iniciar sessão"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:visibility="visible"
        app:circularflow_radiusInDP="32dp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/txtPass"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="281dp"
        android:layout_height="476dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInicio"
        app:srcCompat="@drawable/bannerwhite" />

    <EditText
        android:id="@+id/txtPass"
        android:layout_width="219dp"
        android:layout_height="47dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/custom_box"
        android:backgroundTint="#00d2ff"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="@font/comfortaa"
        android:hint="Palavra-passe"
        android:inputType="textPersonName|textPassword"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:shadowColor="#E8CDCD"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textColorHint="#D7FFFFFF"
        android:visibility="visible"
        app:barrierMargin="15dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/txtEmail"
        tools:ignore="TouchTargetSizeCheck"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="219dp"
        android:layout_height="47dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/custom_box"
        android:backgroundTint="#00d2ff"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="@font/comfortaa"
        android:hint="E-Mail"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:shadowColor="#E8CDCD"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textColorHint="#D7FFFFFF"
        android:visibility="visible"
        app:barrierMargin="15dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/textLog"
        tools:ignore="TouchTargetSizeCheck"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/aclonica"
        android:text="Bem-vindo"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textCriarConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="448dp"
        android:fontFamily="@font/comfortaa"
        android:text="Não tem conta? Crie aqui a sua"
        android:textColor="#3BB7FA"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/textInicio" />

    <TextView
        android:id="@+id/textLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/aclonica"
        android:text="Login"
        android:textColor="#00d2ff"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/imageView9" />

</androidx.constraintlayout.widget.ConstraintLayout>