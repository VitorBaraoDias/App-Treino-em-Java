<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FFFFFF"
    android:backgroundTint="#F1F1F1"
    tools:context=".Caracteristicas">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="617dp"
        android:layout_height="192dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imgazul_degrade" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navBar"
        android:layout_width="416dp"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/degradebutton"
        app:itemIconTint="@color/white"
        app:itemRippleColor="@color/white"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/navbar_item" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="360dp"
        android:layout_height="499dp"
        app:layout_constraintBottom_toTopOf="@+id/navBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.703"
        app:srcCompat="@drawable/bannerwhite" />

    <Spinner
        android:id="@+id/spin_Altura"
        android:layout_width="231dp"
        android:layout_height="51dp"
        android:background="@drawable/custom_button"
        android:backgroundTint="#3DCADC"
        android:clickable="true"
        android:drawableStart="@drawable/ic_down"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/spinPeso"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/spinPeso"
        app:layout_constraintTop_toBottomOf="@+id/spinPeso"
        app:layout_constraintVertical_bias="0.15"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/txtNome"
        android:layout_width="231dp"
        android:layout_height="51dp"
        android:layout_marginStart="96dp"
        android:layout_marginEnd="105dp"
        android:background="@drawable/custom_box"
        android:backgroundTint="#3DCADC"
        android:editable="false"
        android:ems="10"
        android:fontFamily="@font/comfortaa"
        android:hint="nome"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.338" />

    <EditText
        android:id="@+id/txtIdade"
        android:layout_width="231dp"
        android:layout_height="51dp"
        android:autoText="false"
        android:background="@drawable/custom_box"
        android:backgroundTint="#3DCADC"
        android:ems="10"
        android:enabled="true"
        android:fontFamily="@font/comfortaa"
        android:hint="idade"
        android:inputType="number"
        android:maxLength="2"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtNome"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtNome"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.46" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="268dp"
        android:fontFamily="@font/comfortaa"
        android:text="Peso"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/spinPeso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIdade"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="268dp"
        android:fontFamily="@font/comfortaa"
        android:text="Idade"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/txtIdade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="268dp"
        android:fontFamily="@font/comfortaa"
        android:text="Nome"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/txtNome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnalterar"
        android:layout_width="173dp"
        android:layout_height="45dp"

        android:layout_marginStart="24dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/degradebutton"
        android:fontFamily="@font/comfortaa"
        android:text="Alterar"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintEnd_toEndOf="@+id/spin_Altura"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintStart_toStartOf="@+id/spin_Altura" />

    <Spinner
        android:id="@+id/spinPeso"
        android:layout_width="231dp"
        android:layout_height="51dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/custom_button"
        android:backgroundTint="#3DCADC"
        android:clickable="false"
        android:drawableStart="@drawable/ic_lock"
        app:layout_constraintEnd_toEndOf="@+id/txtIdade"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="@+id/txtIdade"
        app:layout_constraintTop_toBottomOf="@+id/txtIdade"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/comfortaa"
        android:text="Altura"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/spin_Altura"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinPeso"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imgGenero"
        android:layout_width="151dp"
        android:layout_height="166dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="124dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:srcCompat="@drawable/profilemen" />

    <ImageView
        android:id="@+id/imgAlterar"
        android:layout_width="43dp"
        android:layout_height="38dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintStart_toEndOf="@+id/btnalterar"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        app:layout_constraintVertical_bias="0.965"
        app:srcCompat="@drawable/ic_sharp_handyman_24" />

    <ImageView
        android:id="@+id/imgVoltarProfile"
        android:layout_width="44dp"
        android:layout_height="42dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        app:srcCompat="@drawable/ic_baseline_reply_24" />

    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="43dp"
        android:layout_height="38dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintEnd_toStartOf="@+id/btnalterar"
        app:srcCompat="@drawable/ic_baseline_delete_24" />


</androidx.constraintlayout.widget.ConstraintLayout>