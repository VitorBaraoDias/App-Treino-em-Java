<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FFFFFF"
    android:backgroundTint="#F1F1F1"
    tools:context=".Caracteristicas">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="617dp"
        android:layout_height="192dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/imgazul_degrade" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNome2"
        app:srcCompat="@drawable/purplewave" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="352dp"
        android:layout_height="561dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bannerwhite" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="294dp"
        android:layout_height="81dp"
        android:fontFamily="@font/aclonica"
        android:text="Vamos começar"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17" />

    <Spinner
        android:id="@+id/spin_Altura"
        android:layout_width="234dp"
        android:layout_height="51dp"
        android:background="@drawable/custom_box"
        android:backgroundTint="#3DCADC"
        android:drawableStart="@drawable/ic_down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/spinPeso"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/spinPeso"
        app:layout_constraintTop_toBottomOf="@+id/spinPeso"
        app:layout_constraintVertical_bias="0.15"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/txtNome2"
        android:layout_width="238dp"
        android:layout_height="51dp"
        android:layout_marginStart="96dp"
        android:layout_marginEnd="105dp"
        android:background="@drawable/custom_box"
        android:backgroundTint="#3DCADC"
        android:ems="10"
        android:fontFamily="@font/comfortaa"
        android:hint="Insira o seu nome"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.347" />

    <EditText
        android:id="@+id/txtIdade"
        android:layout_width="238dp"
        android:layout_height="51dp"
        android:autoText="false"
        android:background="@drawable/custom_box"
        android:backgroundTint="#3DCADC"
        android:ems="10"
        android:fontFamily="@font/comfortaa"
        android:hint="Insira a sua idade"
        android:inputType="number"
        android:maxLength="2"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtNome2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtNome2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.467" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="268dp"
        android:fontFamily="@font/comfortaa"
        android:text="Peso"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/spinPeso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIdade"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnJanela2"
        android:layout_width="173dp"
        android:layout_height="45dp"

        android:layout_marginBottom="32dp"
        android:background="@drawable/degradebutton"
        android:fontFamily="@font/comfortaa"
        android:text="Avançar"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintEnd_toEndOf="@+id/spin_Altura"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/spin_Altura" />

    <Spinner
        android:id="@+id/spinPeso"
        android:layout_width="231dp"
        android:layout_height="51dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/custom_box"
        android:backgroundTint="#3DCADC"
        android:drawableStart="@drawable/ic_lock"
        app:layout_constraintEnd_toEndOf="@+id/txtIdade"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="@+id/txtIdade"
        app:layout_constraintTop_toBottomOf="@+id/txtIdade"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/comfortaa"
        android:text="Altura"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/spin_Altura"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinPeso"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>